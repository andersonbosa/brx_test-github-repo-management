{
  "name": "@repohub/api",
  "version": "1.0.0",
  "author": "Anderson do Nascimento Bosa",
  "license": "CC0-1.0",
  "scripts": {
    "docker:kill": "docker kill demo_api",
    "docker:shell": "docker exec -t demo_api bash ",
    "docker:logs": "docker logs --details -f demo_api ",
    "docker:build": "docker build -t repohub/api:unstable . ",
    "docker:run": "docker run --rm -- repohub/api:unstable ",
    "start:http": "node dist/src/infrastructure/http/runner.js ",
    "start:worker": "node dist/src/infrastructure/worker/runner.js ",
    "start": "node dist/src/index.js ",
    "build": "tsc ",
    "build:watch": "tsc --watch ",
    "devvv": "tsx --watch --inspect-brk=127.0.0.1:9222 ./src/index.ts",
    "devv": "nodemon ./src/index.ts",
    "dev": "tsx --inspect --watch ./src/index.ts ",
    "lint": "eslint --fix . ",
    "ci:test": "jest ",
    "test": "jest --watch ",
    "test:debug": "tsx --inspect=127.0.0.1:9228 ./node_modules/.bin/jest --watch --detectOpenHandles --runInBand ",
    "test:coverage": "npm run test:debug -- --coverage . ",
    "test:usecases": "npm run test:debug -- ./src/core/domain/usecases ",
    "test:repositories": "npm run test:debug -- ./src/core/repositories ",
    "test:core": "npm run test:debug -- ./src/core/ ",
    "test:adapters": "npm run test:debug -- ./src/adapters ",
    "test:services": "npm run test:debug -- ./src/adapters/services ",
    "test:infrastructure": "npm run test:debug -- ./src/infrastructure"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/amqplib": "^0.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/papaparse": "^5.3.14",
    "@types/passport": "^1.0.16",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-prom-bundle": "^7.0.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.3.0",
    "morgan": "^1.10.0",
    "octokit": "^3.2.0",
    "papaparse": "^5.4.1",
    "passport": "^0.7.0",
    "pino": "^8.20.0",
    "pino-http": "^9.0.0",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.2",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "yamljs": "^0.3.0",
    "zod": "^3.23.5"
  },
  "engines": {
    "node": ">=20.x"
  }
}
